{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],                         
    "module": "esnext",                     
    "allowJs": true, 
    "jsx": "react",                                 
    "outDir": "./dist",                       
    "strict": true,                           
    "moduleResolution": "node",   
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                               
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,               
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src"],
}
